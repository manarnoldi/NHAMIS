@{
    ViewBag.Title = "Home Page";
}

<form>

    <div class="form-row">
        <div class="form-group description-header">
            <br />
            <h3><u> Personal Information</u></h3>
        </div>

    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="IdNumber">ID Number/Passport </label>
            <input type="text" class="form-control" id="IdNumber" placeholder="ID Number/Passport">
        </div>
        <div class="form-group col-md-6">
            <label for="NominationPeriod">Nomination Period</label>
            <select id="NominationPeriod" class="form-control">
                <option selected>Choose...</option>
                <option>Period 1</option>
                <option>Period 2</option>
                <option>Period 1</option>
            </select>
        </div>
    </div>


    <div class="form-row">

        <div class="form-group col-md-6">
            <label for="salutation">Salutation/Rank</label>
            <select id="salutation" class="form-control">
                <option selected>Choose...</option>
                <option>salutation 1</option>
                <option>salutation 2</option>
                <option>salutation 3</option>
            </select>
        </div>

        <div class="form-group col-md-6">
            <label for="Surname">Surname </label>
            <input type="text" class="form-control" id="Surname" placeholder="Surname">
        </div>
    </div>



    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="OtherNames">Other Names </label>
            <input type="text" class="form-control" id="OtherNames" placeholder="Other Names">
        </div>
        <div class="form-group col-md-6">
            <label for="DateOfBirth">Date Of Birth </label>
            <input type="datetime" class="form-control" id="DateOfBirth" placeholder="Date Of Birth">
        </div>

    </div>


    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="CountyOfBirth">County Of Birth</label>
            <input type="text" class="form-control" id="CountyOfBirth" placeholder="CountyOfBirth">
        </div>
        <div class="form-group col-md-6">
            <label for="Nationality">Nationality</label>
            <select id="Nationality" class="form-control">
                <option selected>Choose...</option>
                <option>Kenyan</option>
                <option>Non-Kenyan</option>
            </select>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group description-header">
            <br />
            <h3><u> Contact Information</u></h3>
        </div>

    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="PostalAddress">Postal/Organization/Business  Address </label>
            <input type="text" class="form-control" id="PostalAddress" placeholder="Postal/Organization/Business  Address">
        </div>
        <div class="form-group col-md-6">
            <label for="Email">Email</label>
            <input type="email" class="form-control" id="Email" placeholder="Email">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Mobile">Mobile Number</label>
            <input type="text" class="form-control" id="Mobile" placeholder="Mobile Number">
        </div>
        <div class="form-group col-md-6">
            <label for="HomeCounty">Home County</label>
            <select id="HomeCounty" class="form-control">
                <option selected>Choose...</option>
                <option>Nairobi</option>
                <option>Nyamira</option>
                <option>Mombasa</option>
                <option>Kericho</option>
            </select>
        </div>
    </div>


    <div class="form-row">

        <div class="form-group col-md-6">
            <label for="SubCounty">SubCounty</label>
            <select id="SubCounty" class="form-control">
                <option selected>Choose...</option>
                <option>Dagoreti</option>
                <option>Umoja</option>

            </select>
        </div>

        <div class="form-group col-md-6">
            <label for="Ward">Ward</label>
            <select id="Ward" class="form-control">
                <option selected>Choose...</option>
                <option>Nairobi</option>
                <option>Nyamira</option>

            </select>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Location">Location </label>
            <input type="text" class="form-control" id="Location" placeholder="Location">
        </div>
        <div class="form-group col-md-6">
            <label for="SubLocation">SubLocation</label>
            <input type="text" class="form-control" id="SubLocation" placeholder="SubLocation">
        </div>
    </div>


    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Ward">Ward </label>
            <input type="text" class="form-control" id="Ward" placeholder="Ward">
        </div>
        <div class="form-group col-md-6">
            <label for="Village">Village</label>
            <input type="text" class="form-control" id="Village" placeholder="Village">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            
        </div>
        <div class="form-group col-md-6">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-default">Next >></button>
            </div>
        </div>
    </div>

</form>